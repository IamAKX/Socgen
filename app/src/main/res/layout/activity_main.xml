<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.akash.applications.socgen.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout

            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:gravity="center">

                <ImageView
                    android:src="@drawable/round_medium_gray_background"
                    android:id="@+id/logo"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />

            </RelativeLayout>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:hint="Name"
                android:inputType="textCapWords"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                app:met_underlineColor="#a4a4a4"
                app:met_floatingLabel="normal"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/emailID"
                android:hint="Email ID"
                android:inputType="textEmailAddress"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                app:met_underlineColor="#a4a4a4"
                app:met_floatingLabel="normal"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mobileNo"
                android:hint="Mobile No"
                android:inputType="phone"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                app:met_underlineColor="#a4a4a4"
                app:met_floatingLabel="normal"/>


            <Button
                android:id="@+id/btnOpenAccount"
                android:textColor="@android:color/white"
                android:text="OPEN ACCOUNT"
                android:textSize="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />




            <!--  Lower section  -->




            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentBottom="true"
                    android:background="@color/lowerBackground"
                    android:layout_width="match_parent"
                    android:layout_height="17dp" />
                <TextView
                    android:layout_centerInParent="true"
                    android:background="@drawable/round_gray_background"
                    android:textSize="15sp"
                    android:text="OR"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_width="34dp"
                    android:layout_height="34dp" />
            </RelativeLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:background="@color/lowerBackground"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open account with social media"/>

                <LinearLayout
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_margin="10dp"
                        android:textColor="@color/ms_white"
                        android:text="FACEBOOK"
                        android:background="@color/social_media_button_background"
                        android:layout_weight="1"
                        android:textSize="17sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:layout_margin="10dp"
                        android:textColor="@color/ms_white"
                        android:text="LINKDIN"
                        android:background="@color/social_media_button_background"
                        android:layout_weight="1"
                        android:textSize="17sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout

                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_margin="10dp"
                        android:textColor="@color/ms_white"
                        android:text="GOOGLE"
                        android:background="@color/social_media_button_background"
                        android:layout_weight="1"
                        android:textSize="17sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:layout_margin="10dp"
                        android:textColor="@color/ms_white"
                        android:text="TWITTER"
                        android:background="@color/social_media_button_background"
                        android:layout_weight="1"
                        android:textSize="17sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>
            <TextView
                android:background="@color/lowerBackground"
                android:layout_width="match_parent"
                android:layout_height="10dp" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>
