<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="com.akash.applications.socgen.RegFragments.PersonalInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/idcardno"
                    android:hint="ID Card No."
                    android:inputType="textCapCharacters"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    app:met_underlineColor="#a4a4a4"
                    app:met_floatingLabel="normal"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/placeOfBirth"
                    android:hint="Place of birth"
                    android:inputType="textPersonName"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    app:met_underlineColor="#a4a4a4"
                    app:met_floatingLabel="normal"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dateofexpiry"
                    android:hint="Date of expiry"
                    android:inputType="number"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    app:met_underlineColor="#a4a4a4"
                    app:met_floatingLabel="normal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/PESEL"
                    android:hint="PESEL"
                    android:inputType="textCapCharacters"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    app:met_underlineColor="#a4a4a4"
                    app:met_floatingLabel="normal"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dateofbirth"
                    android:hint="Date of birth"
                    android:inputType="number"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    app:met_underlineColor="#a4a4a4"
                    app:met_floatingLabel="normal"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Parent's Details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/parentname"
            android:hint="Parent's Name"
            android:inputType="textCapWords"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            app:met_underlineColor="#a4a4a4"
            app:met_floatingLabel="normal"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/parentaddress"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            app:met_underlineColor="#a4a4a4"
            app:met_floatingLabel="normal"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/parentspostalcode"
            android:hint="Postal Code"
            android:inputType="number"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            app:met_underlineColor="#a4a4a4"
            app:met_floatingLabel="normal"/>

        <CheckBox
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/verifyAlldata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verified all the captured data"/>
        
    </LinearLayout>

</ScrollView>
