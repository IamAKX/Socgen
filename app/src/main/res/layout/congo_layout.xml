<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:padding="15dp"
    android:layout_height="wrap_content">

    <TextView
        android:gravity="center"
        android:textSize="20sp"
        android:padding="10dp"
        android:text="Congratulations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You have successfully completed the \nonboarding process.\n\nCheck your registered email for welcome kit \nand account details.\n\nGo to the link to know more about your \naccount and choose preference."/>

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btnDone"
        android:textColor="@android:color/white"
        android:text="I AGREE"
        android:textSize="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>